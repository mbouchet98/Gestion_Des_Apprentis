
{% extends "@Apprentis/layout.html.twig" %}

{% block title %} {{ parent() }} - Gestions des Apprentis {% endblock %}

{% block body %} 
		<h2>
			<div class="row">
				<div class="col">Liste des Apprentis</div>
				<div class="dropdown">
				  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					promotion :
				  </button>
				  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<a class="dropdown-item" href="#">Action</a>
					<a class="dropdown-item" href="#">Another action</a>
					<a class="dropdown-item" href="#">Something else here</a>
				  </div>
				</div>
				<div class="col text-right"><a class="btn btn-info" href="{{ path ('Apprentis_add') }}" role="button">Ajouter une Apprentis</a></div>
			</div>
		</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th scope="col" class="text-center col-md-2">Nom</th>
					<th scope="col" class="text-center col-md-2">Prenom</th>
					<th scope="col" class="text-center col-md-2">mail</th>
					<th scope="col" class="text-center col-md-1">Modif</th>
					<th scope="col" class="text-center col-md-1">Supp</th>
				</tr>
			</thead>
			<tbody>
				{% for uneApp in mesApp %}
					<tr>
						<td class="text-center">
							<a href="{{ path ('Apprentis_view',{'id':uneApp.appId})}}">
								{{ uneApp.appNom }}
							</a>
						</td>
						<td class="text-center">
							{{ uneApp.appPrenom }}
						</td>
						<td class="text-center">
							{{ uneApp.appMail }}
						</td>
						
						<td class="text-center">
							<a href="{{ path ('Apprentis_update',{'id':uneApp.appId})}}">
								modifier
							</a> 
						</td>
						<td class="text-center">
							<a href="{{ path ('Apprentis_delete',{'id':uneApp.appId})}}">
								Supprimer
							</a>
						</td>
					</tr>
					{% else %}
						<tr>
							<td colspan="4" class="text-center">
								Pas de Apprentis pour le moment
							</td>
						</tr>					
				{% endfor %}
			</tbody>
		</table>
{% endblock %}		
		


   
  