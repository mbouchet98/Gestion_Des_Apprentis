{% extends "@Apprentis/layout.html.twig" %}

{% block title %} {{ parent() }} - Gestions des Villes {% endblock %}

{% block body %} 
		<h2>
			<div class="row">
				<div class="col">Liste des Villes</div>
				<div class="col text-right"><a class="btn btn-info" href="{{ path ('Ville_add') }}" role="button">Ajouter une Villes</a></div>
			</div>
		</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th scope="col" class="text-center col-md-2">Code Postal</th>
					<th scope="col" class="text-center col-md-2">Nom</th>
					<th scope="col" class="text-center col-md-1">Modif</th>
					<th scope="col" class="text-center col-md-1">Supp</th>
				</tr>
			</thead>
			<tbody>
				{% for uneVille in mesVilles %}
					<tr>
						<td class="text-center">
							<a href="{{ path ('Ville_view',{'id':uneVille.vilid})}}">
								{{ uneVille.vilcp }}
							</a>
						</td>
						<td class="text-center">
							{{ uneVille.villibelle }}
						</td>
						<td class="text-center">
							<a href="{{ path ('Ville_update',{'id':uneVille.vilid})}}">
								modifier
							</a> 
						</td>
						<td class="text-center">
							<a href="{{ path ('Ville_delete',{'id':uneVille.vilid})}}">
								Supprimer
							</a>
						</td>
					</tr>
					{% else %}
						<tr>
							<td colspan="4" class="text-center">
								Pas de Villes pour le moment
							</td>
						</tr>					
				{% endfor %}
			</tbody>
		</table>
{% endblock %}		
		


   
  