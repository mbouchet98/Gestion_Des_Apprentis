{% extends "@Apprentis/layout.html.twig" %}

{% block title %} {{ parent() }} - Gestions des Promotion {% endblock %}

{% block body %} 
		<h2>
			<div class="row">
				<div class="col">Liste des Promotion</div>
				<div class="col text-right"><a class="btn btn-info" href="{{ path ('Promotion_add') }}" role="button">Ajouter une Promotion</a></div>
			</div>
		</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th scope="col" class="text-center col-md-2">Date Promotion</th>
					<th scope="col" class="text-center col-md-1">Modif</th>
					<th scope="col" class="text-center col-md-1">Supp</th>
				</tr>
			</thead>
			<tbody>
				{% for uneProm in mesProm %}
					<tr>
						<td class="text-center">
							<a href="{{ path ('Promotion_view',{'id':uneProm.proPromotion})}}">
								{{ uneProm.proPromotion }}
							</a>
						</td>
						<td class="text-center">
							<a href="{{ path ('Promotion_update',{'id':uneProm.proPromotion})}}">
								modifier
							</a> 
						</td>
						<td class="text-center">
							<a href="{{ path ('Promotion_delete',{'id':uneProm.proPromotion})}}">
								Supprimer
							</a>
						</td>
					</tr>
					{% else %}
						<tr>
							<td colspan="4" class="text-center">
								Pas de Promotion pour le moment
							</td>
						</tr>					
				{% endfor %}
			</tbody>
		</table>
{% endblock %}

