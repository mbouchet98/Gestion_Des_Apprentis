{% extends "@Apprentis/layout.html.twig" %}

{% block title %} {{ parent() }} - Gestions des Titres {% endblock %}

{% block body %} 
		<h2>
			<div class="row">
				<div class="col">Liste des Titres</div>
				<div class="col text-right"><a class="btn btn-info" href="{{ path ('Titre_add') }}" role="button">Ajouter une Titres</a></div>
			</div>
		</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th scope="col" class="text-center col-md-2">Libelle</th>
				</tr>
			</thead>
			<tbody>
				{% for unTitre in mesTitres %}
					<tr>
						<td class="text-center">
							<a href="{{ path ('Titre_view',{'id':unTitre.titId})}}">
								{{ unTitre.titLibelle }}
							</a>
						</td>
						<td class="text-center">
							<a href="{{ path ('Titre_update',{'id':unTitre.titId})}}">
								modifier
							</a> 
						</td>
						<td class="text-center">
							<a href="{{ path ('Titre_delete',{'id':unTitre.titId})}}">
								Supprimer
							</a>
						</td>
					</tr>
					{% else %}
						<tr>
							<td colspan="4" class="text-center">
								Pas de Titre pour le moment
							</td>
						</tr>					
				{% endfor %}
			</tbody>
		</table>
{% endblock %}		
		


   
  